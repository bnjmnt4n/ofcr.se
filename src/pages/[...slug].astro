---
import type { CollectionEntry } from "astro:content";
import ArticleLayout from "../layouts/ArticleLayout.astro";
import { getArticles } from "../utils/getArticles";

export async function getStaticPaths() {
  const articles = await getArticles({ drafts: true });

  return articles.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

export type Props = CollectionEntry<"articles">;

const post = Astro.props;
const { headings, Content } = await post.render();
let ogImage = undefined;
if (post.data.cover === true || typeof post.data.cover === "object") {
  ogImage = `/images/covers/${post.slug}.png`;
}
---
<ArticleLayout {...post.data} slug={post.slug} headings={headings} ogImage={ogImage}>
  <Content />
</ArticleLayout>
