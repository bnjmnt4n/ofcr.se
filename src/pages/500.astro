  <script
    async
    src={`${origin}/vendor/count.js`}
    data-goatcounter={`${origin}/count`}
  />
  <script is:inline>
    const newLink = document.createElement("a");
    newLink.textContent = "Reload";
    newLink.href = location.href;
    const newSpan = document.createElement("span");
    newSpan.textContent = " or ";
    const currLink = document.querySelector("a");
    const div = currLink.parentNode;
    div.insertBefore(newSpan, currLink);
    div.insertBefore(newLink, newSpan);
    currLink.textContent = "head home?";
  </script>
</body>
</html>
